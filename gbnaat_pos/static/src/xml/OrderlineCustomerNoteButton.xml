<?xml version="1.0" encoding="utf-8"?>
<templates xml:space="preserve">
    <t name="gbnaat_pos.OrderlineCustomerNoteButton" owl="1" t-inherit="point_of_sale.OrderlineCustomerNoteButton" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('control-button')]" position="replace">
            <div id="detalles_disable" class="control-button" t-att-class="{ 'disabled-mode': enable_detalles}" t-att-disabled="enable_detalles">
                <i class="fa fa-sticky-note" />
                <span> </span>
                <span>Customer Note</span>
            </div>
            <div id="detalles_enable" class="control-button" t-att-class="{ 'disabled-mode': enable_detalles}" t-att-disabled="enable_detalles">
                <i class="fa fa-sticky-note" />
                <span> </span>
                <span>Detalles de prenda</span>
            </div>
        </xpath>
    </t>
</templates>
