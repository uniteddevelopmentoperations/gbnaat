<?xml version="1.0" encoding="utf-8"?>
<templates xml:space="preserve">
    <t name="gbnaat_pos.TableGuestsButton" owl="1" t-inherit="pos_restaurant.TableGuestsButton" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('control-button')]" position="replace">
            <div id="comensales_disable" class="control-button" t-att-class="{ 'disabled-mode': disable_comensales}" t-att-disabled="disable_comensales">
                <span class="control-button-number">
                    <t t-esc="nGuests" />
                </span>
                <span> </span>
                <span>Guests</span>
            </div>
        </xpath>
    </t>
</templates>
