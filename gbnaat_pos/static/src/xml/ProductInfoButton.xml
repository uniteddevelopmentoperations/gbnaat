<?xml version="1.0" encoding="utf-8"?>
<templates xml:space="preserve">
    <t name="gbnaat_pos.ProductInfoButton" owl="1" t-inherit="point_of_sale.ProductInfoButton" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('control-button')]" position="replace">
            <div id="info_disable" class="control-button" t-att-class="{ 'disabled-mode': disable_info}" t-att-disabled="disable_info">
                <i class="fa fa-info-circle" role="img" aria-label="Info" title="Info" />
                Info
            </div>
        </xpath>
    </t>
</templates>
